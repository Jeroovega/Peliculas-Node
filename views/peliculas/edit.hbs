<h1 class="display-5 m-4">Formulario de edición películas</h1>
<hr>

{{!-- Con el methodOverride cambio el metodo post por el PUT (?_method=PUT) --}}
<form action="/api/peliculas/{{pelicula._id}}?_method=PUT" method="post" class="border border-warning p-5 w-50 m-auto">

    {{!-- Campo Título pelicula --}}
    <div class="mb-3">
        <label for="lbl-title" class="form-label">Titulo</label>
        <input name="title" value="{{pelicula.title}}" type="text" class="form-control" id="lbl-title" placeholder="Ingrese el título de la película">
    </div>

    {{!-- Campo año pelicula --}}
    <div class="mb-3">
        <label for="lbl-tilte" class="form-label">Año</label>
        <input name="year" value="{{pelicula.year}}" type="text" class="form-control" id="lbl-tilte" placeholder="Ingrese el año de la película">
    </div>

    <button class="btn btn-success border">Editar película</button>
</form>